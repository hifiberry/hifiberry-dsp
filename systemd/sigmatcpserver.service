[Unit]
Description=HiFiBerry DSP TCP/REST API service
After=network.target

[Service]
Type=simple
User=root
ExecStart=/usr/bin/python3 /usr/local/bin/sigmatcpserver --localhost --enable-rest
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
